<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.unipr.iot.oas.iotsecurecontroller.LoginActivity"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar android:id="@+id/login_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/login_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"></LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView android:src="@drawable/ic_iot_device"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="32sp"
            android:text="Secure Proxy Access for IoT"/>

    </LinearLayout>

    <Button android:id="@+id/facebook_login_button"
        android:background="@drawable/facebook_button_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button android:id="@+id/google_login_button"
        android:background="@drawable/google_button_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>